<Window x:Class="Laba3_v4.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Laba3_v4" Height="450" Width="800">
    <Grid>
        <Button Name="LoadButton" Content="Load Image" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Height="30" Margin="10" Click="LoadButton_Click"/>
        <Button Name="LinearContrastButton" Content="Linear Contrast" HorizontalAlignment="Left" VerticalAlignment="Top" Width="100" Height="30" Margin="100,10,0,0" Click="LinearContrastButton_Click"/>
        <Button Name="EqualizeButton" Content="Equalize Histogram" HorizontalAlignment="Left" VerticalAlignment="Top" Width="120" Height="30" Margin="210,10,0,0" Click="EqualizeButton_Click"/>
        <Button Name="SobelButton" Content="Sobel Edge Detection" HorizontalAlignment="Left" VerticalAlignment="Top" Width="150" Height="30" Margin="350,10,0,0" Click="SobelButton_Click"/>
        <Image Name="ImageDisplay" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,50,10,10"/>
    </Grid>
</Window>
